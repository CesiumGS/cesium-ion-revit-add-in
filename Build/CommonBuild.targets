<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <!-- PropertyGroup for centralized PostBuild commands -->
  <PropertyGroup>
    <_CustomPostBuildEventCommands>
      xcopy /Y /I /S "$(SolutionDir)\..\tilers\build\bin\$(Configuration)\*.*" "$(TargetDir)tiler\"
      xcopy /Y /I "$(SolutionDir)\..\tilers\ThirdParty.json" "$(TargetDir)tiler\"
      xcopy /Y /I /E "$(SolutionDir)\CesiumIonRevitAddin\Images\*" "$(TargetDir)Images\" 
      xcopy /Y /I "$(SolutionDir)\CesiumIonRevitAddin\CesiumIonRevit.addin" "$(TargetDir)..\"
      xcopy /Y /I "$(SolutionDir)\ThirdParty.json" "$(TargetDir)"
    </_CustomPostBuildEventCommands>
  </PropertyGroup>

  <!-- Custom PostBuildEvent target to avoid Visual Studio duplication -->
  <Target Name="CustomPostBuild" AfterTargets="Build">
    <Exec Command="$(_CustomPostBuildEventCommands)" />
  </Target>

</Project>
